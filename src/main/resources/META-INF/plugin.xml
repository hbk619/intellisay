<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.hbk619.jetbrains-screenreader</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Better Screenreader</name>

    <depends>com.intellij.java</depends>
    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="support@yourcompany.com" url="https://www.yourcompany.com">YourCompany</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable parentId="tools" instance="com.hbk619.jetbrainsscreenreader.settings.AppSettingsConfigurable"
                                 id="com.hbk619.jetbrainsscreenreader.settings.AppSettingsConfigurable"
                                 displayName="Intelli Say"/>
        <applicationService serviceImplementation="com.hbk619.jetbrainsscreenreader.settings.AppSettingsState"/>

    </extensions>
    <applicationListeners>
        <listener
                class="com.hbk619.jetbrainsscreenreader.ScreenReaderApp"
                topic="com.intellij.ide.AppLifecycleListener" />

    </applicationListeners>
    <projectListeners>
        <listener class="com.hbk619.jetbrainsscreenreader.debugging.BreakpointsListener"
                  topic="com.intellij.xdebugger.breakpoints.XBreakpointListener"/>
        <listener class="com.hbk619.jetbrainsscreenreader.files.FileEditorListener"
                  topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </projectListeners>
    <actions>
        <action class="com.hbk619.jetbrainsscreenreader.files.FileNameListener"
                text="Say File Name">
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="ctrl meta alt l"/>
        </action>
        <action class="com.hbk619.jetbrainsscreenreader.files.AutomaticFileNameSetting"
                text="Automatic File Name Announcement">
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="ctrl meta alt h"/>
        </action>
        <action class="com.hbk619.jetbrainsscreenreader.debugging.DebugListener"
                text="Say Variable">
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="ctrl meta alt v"/>
        </action>
        <action class="com.hbk619.jetbrainsscreenreader.settings.WarningBeep"
                text="Warning Beep">
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="ctrl meta alt w"/>
        </action>
        <action class="com.hbk619.jetbrainsscreenreader.settings.ErrorBeep"
                text="Error Beep">
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="ctrl meta alt e"/>
        </action>
        <action class="com.hbk619.jetbrainsscreenreader.settings.BreakpointBeep"
                text="Breakpoint Beep">
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="ctrl meta alt b"/>
        </action>
        <action class="com.hbk619.jetbrainsscreenreader.issues.WarningsAndErrors"
                text="Say Number of Errors">
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="ctrl meta alt shift e"/>
        </action>
        <action class="com.hbk619.jetbrainsscreenreader.issues.IssueReader"
                text="Say Issue">
            <keyboard-shortcut
                    keymap="$default"
                    first-keystroke="ctrl meta alt shift i"/>
        </action>
    </actions>
</idea-plugin>